---
interface Props {
  title: string;
}
const { title } = Astro.props;
const chars = {
  'ě': 'e',
  'š': 's',
  'č': 'c',
  'ř': 'r',
  'ž': 'z',
  'ý': 'y',
  'á': 'a',
  'í': 'i',
  'é': 'e',
  'ú': 'u',
  'ů': 'u',
};
string = title.replace(/[ěščřžýáíéúů]/g, m => chars[m]);
---

<li class="link-card">
  <a href=`./produkty/${string}`>
    <img src=`/${title}/1/1.jpg` alt={title} />
    <h2>
      {title}
      <span>&rarr;</span>
    </h2></a
  >
</li>
<style>
  .link-card {
    list-style: none;
    display: flex;
    width: 300px;
    float: left;
    padding: 1px;
    background-color: #23262d;
    background-image: linear-gradient(
        45deg,
        rgb(var(--accent)),
        rgb(var(--accent-light)) 30%,
        transparent 60%
      );
    transition: 1s;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1.5rem - 1px);
    border-radius: 8px;
    color: white;
    background-color: #23262d;
    opacity: 0.8;
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .link-card:is(:hover, :focus-within) {
    background-position: 0;
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-light));
  }
  img {
    max-width: 100%;
  }
</style>
